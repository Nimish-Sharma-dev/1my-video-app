FROM python:3.9-slim

# Install system dependencies for MoviePy and FFmpeg
RUN apt-get update && apt-get install -y \
    ffmpeg \
    imagemagick \
    libsm6 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

# Fix ImageMagick policy (Smart Check)
# This checks multiple locations for the file to prevent the build error
RUN if [ -f /etc/ImageMagick-6/policy.xml ]; then \
        sed -i '/<policy domain="path" rights="none" pattern="@\*"/d' /etc/ImageMagick-6/policy.xml; \
    elif [ -f /etc/ImageMagick/policy.xml ]; then \
        sed -i '/<policy domain="path" rights="none" pattern="@\*"/d' /etc/ImageMagick/policy.xml; \
    else \
        echo "Warning: ImageMagick policy.xml not found. Skipping fix."; \
    fi

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Create temp directory
RUN mkdir -p temp_files

# Run the app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]